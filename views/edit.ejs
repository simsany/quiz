<div class="container">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

	<form class="col-lg-8" action="/<%=question.id%>?_method=PUT" method="POST">
		<h1 style="text-align:center"> Edit question </h1><a class="btn btn-lg btn-info"
							href="/">Home</a><br><br>
		<div class="form-group">
		<h2>Question</h2>
			<textarea class="form-control" type="text" name="quiz[text]" rows="5"><%=question.text%></textarea>
			<br><br>
		</div>

		<div class="form-group">
			<h2>Correct answer</h2>
			<input class="form-control" type="text" name="quiz[answers]" value="<%=question.answers[0]%>">
		<br>
		</div>
			<h2>Wrong answers</h2>
<div class="form-group">
		<input class="form-control" type="text" name="quiz[answers]" value="<%=question.answers[1]%>">
		</div>

<div class="form-group">
		<input class="form-control" type="text" name="quiz[answers]" value="<%=question.answers[2]%>">
		</div>
<div class="form-group">
		<input class="form-control" type="text" name="quiz[answers]" value="<%=question.answers[3]%>">
		</div>

		<div class="form-group">
			<button class="btn btn-info btn-lg btn-block">Update</button>
		</div>
		</div>
	</form>


</div>
